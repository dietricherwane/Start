	<% unless @completed_projects.blank? %>
	  <% @completed_projects.each do |completed_project| %>
	    <figure class="portfolio-item effect-sadie">
        <%= image_tag(completed_project.completed_project_images.first.photo.url(:medium)) rescue image_tag("/images/medium/missing.png") %>
        <figcaption>
          <h4><%= completed_project.name %></h4>
          <a href="<%= completed_project_details_path(completed_project.id) %>">Description</a>
        </figcaption>
      </figure>
    <% end %>
  <% end %>
</div>
<div class="portfolio-button center animate-me zoomIn">
