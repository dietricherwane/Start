<div class="container">
	<div class="row">
		<!--PORTFOLIO -->
		<h2 class="with-breaker animate-me fadeInUp">
			Portfolio <span>Galerie Projet</span>
		</h2>
		<div class="col-lg-6">
			<div class="flexslider image-slider">
				<!--SLIDER -->
				<ul class="slides">
				  <% @project_images = @completed_project.completed_project_images %>
				  <% if @project_images.blank? %>
				    <li><a href="/images/medium/missing.png" data-fancybox-group="project-slider" class="fancybox"><img src="/images/medium/missing.png" alt="<%= @completed_project.name %>"></a></li>
				  <% else %>
				    <% @project_images.each do |project_image| %>
				      <li><a href="<%= project_image.photo.url(:medium) %>" data-fancybox-group="project-slider" class="fancybox"><img src="<%= project_image.photo.url(:medium) %>" alt="<%= @completed_project.name %>"></a></li>
				    <% end %>
				  <% end %>
				</ul>
			</div>
			<!--SHARE BUTTONS -->
			<ul class="share-buttons animate-me fadeInUp">
				<script>function fbs_click() {u=location.href;t=document.title;window.open('http://www.facebook.com/sharer.php?u='+encodeURIComponent(u)+'&t='+encodeURIComponent(t),'sharer','toolbar=0,status=0,width=626,height=436'); return false;}</script>
				<li><a rel="nofollow" href="http://www.facebook.com/share.php?u=<;url>" onclick="return fbs_click()" target="_blank" class="btn btn-default button-facebook" ><i class="fa fa-facebook"></i> Share it</a></li>
			</ul>
		</div>
		<div class="col-lg-6">
			<!--ITEM DETAILS -->
			<h1 class="animate-me fadeInRight project-title"><%= @completed_project.name %></h1>
			<hr class="align-left">
			<ul class="post-metadatas">
				<!--<li><i class="fa fa-clock-o"></i>Released : November 25, 2015</li>-->
				<li><i class="fa fa-thumb-tack"></i>Categorie: <a><%= @completed_project.completed_project_category.name %></a></li>
			</ul>
			<p class="text-justify"><%= @completed_project.description %></p>

		</div>
	</div>


	<!--PORTFOLIO -->
	<h2 class="with-breaker animate-me fadeInUp">
		Nos projets récents <span>Nous sommes passionnés!</span>
	</h2>
</div>
<div id="portfolio-container" class="with-separation-bottom with-separation-top">
	<!--PORTFOLIO ITEM -->
	<% unless @completed_projects.blank? %>
	  <% @completed_projects.each do |completed_project| %>
	    <figure class="portfolio-item effect-sadie">
        <%= image_tag(completed_project.completed_project_images.first.photo.url(:medium)) rescue image_tag("/images/medium/missing.png") %>
        <figcaption>
          <h4><%= completed_project.name %></h4>
          <a href="portfolio-single.html">Description</a>
        </figcaption>
      </figure>
    <% end %>
  <% end %>
</div>
