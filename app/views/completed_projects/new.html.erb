<!-- START BREADCRUMB -->
<ul class="breadcrumb">
    <li><a href="<%= completed_project_path %>">Nouveau projet</a></li>
</ul>
<!-- END BREADCRUMB -->


<div class="page-content-wrap">

  <!-- BEGIN ROW -->
  <div class="row">
      <div class="col-md-12">


          <%= form_for @completed_project, url: create_completed_project_path, method: :post,  html: {class: "form-horizontal", multipart: true} do |f| %>
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title">Créer un <strong>projet terminé</strong></h3>
              </div>
              <div class="panel-body">
                  <p>Ce formulaire est destiné à la création des projets terminés.</p>
              </div>
              <div class="panel-body">

                <%= completed_project_messages! %>

                <div class="form-group">
                  <%= f.label :name, class: 'col-md-3 col-xs-12 control-label' %>
                  <div class="col-md-6 col-xs-12">
                    <div class="input-group">
                      <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                      <%= f.text_field :name, class: 'form-control', placeholder: "Veuillez entrer l'intitulé du projet" %>
                    </div>
                  </div>
                </div>

                <%= f.fields_for :completed_project_images do |builder| %>

                  <%# if builder.object.new_record? %>

                    <div class="form-group">
                      <%= builder.label :photo, class: "col-md-3 col-xs-12 control-label" %>
                      <div class = "col-md-6 col-xs-12">

                          <span>Ajouter un fichier</span>
                          <%= builder.file_field :photo, class: "fileinput btn-primary", style: "left: -210.5px; top: 15px;" %>


                      </div>
                    </div>

                  <%# end %>

                <% end %>

                <div class="form-group">
                  <%= f.label :completed_project_category_id, class: 'col-md-3 col-xs-12 control-label' %>
                  <div class = "col-md-6 col-xs-12">
                    <%= f.collection_select(:completed_project_category_id, @completed_project_categories, :id, :name, options ={prompt: "Veuillez choisir une catégorie"}, html_options = {class: "form-control select"}) %>
                  </div>
                </div>

                <div class="form-group">
                  <%= f.label :description, class: 'col-md-3 col-xs-12 control-label' %>
                  <div class="col-md-6 col-xs-12">
                    <div class="input-group">
                      <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                      <%= f.text_area :description, class: 'form-control', placeholder: "Veuillez entrer la description du projet" %>
                    </div>
                  </div>
                </div>


              </div>
              <div class="panel-footer">
                <button class="btn btn-primary">Valider</button>
              </div>
          </div>
          <% end %>

      </div>
  </div>
  <!-- END ROW -->

</div>
