<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- META SECTION -->
        <title><%= @page_title %></title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <link rel="icon" href="favicon.ico" type="image/x-icon" />
        <!-- END META SECTION -->

        <!-- CSS INCLUDE -->
        <%= stylesheet_link_tag 'back', media: 'all', 'data-turbolinks-track' => true %>
        <!-- EOF CSS INCLUDE -->
    </head>
    <body>
        <!-- START PAGE CONTAINER -->
        <div class="page-container">

            <!-- START PAGE SIDEBAR -->
            <div class="page-sidebar">
                <!-- START X-NAVIGATION -->
                <ul class="x-navigation">

                  <li class="xn-title">Navigation</li>
                  <li class="xn-openable">
                      <a href="#"><span class="fa fa-desktop"></span> <span class="xn-text">Sujets</span></a>
                      <ul>
                          <li><a href="<%= subject_path %>"><span class="fa fa-desktop"></span> Créer un sujet</a></li>
                          <li><a href="<%= subjects_path %>"><span class="fa fa-desktop"></span> Liste des sujets</a></li>
                      </ul>
                  </li>
                  <li>
                      <a href="<%= contacts_path %>"><span class="fa fa-desktop"></span> <span class="xn-text">Contacts</span></a>
                  </li>
                  <li>
                      <a href="<%= projects_path %>"><span class="fa fa-desktop"></span> <span class="xn-text">Projets soumis</span></a>
                  </li>
                  <li class="xn-openable">
                    <a href="#"><span class="fa fa-desktop"></span> <span class="xn-text">Gestion de projets</span></a>
                    <ul>
                      <li class="xn-openable">
                        <a href="#">Budget</a>
                        <ul>
                          <li>
                            <a href="<%= budget_path %>"><span class="fa fa-desktop"></span> Créer un budget</a>
                          </li>
                          <li><a href="<%= budgets_path %>"><span class="fa fa-desktop"></span> Liste des budgets</a></li>
                        </ul>
                      </li>
                    </ul>
                  </li>
                  <li class="active">

                  </li>
                  <li class="xn-openable">
                      <a href="<%= completed_project_path %>"><span class="fa fa-desktop"></span> <span class="xn-text">Projets terminés</span></a>
                      <ul>
                        <li  class="xn-openable">
                          <a href="#">Catégories de projets</a>
                          <ul>
                            <li>
                              <a href="<%= completed_project_category_path %>"><span class="fa fa-desktop"></span> Créer une catégorie</a>
                            </li>
                            <li><a href="<%= completed_project_categories_path %>"><span class="fa fa-desktop"></span> Liste des Catégories</a></li>
                          </ul>
                        </li>
                        <li  class="xn-openable">
                          <a href="#">Gestion des projets</a>
                          <ul>
                            <li>
                              <a href="<%= completed_project_path %>"><span class="fa fa-desktop"></span> Créer un projet</a>
                            </li>
                          </ul>
                        </li>
                      </ul>
                  </li>
                </ul>
                <!-- END X-NAVIGATION -->
            </div>
            <!-- END PAGE SIDEBAR -->

            <!-- PAGE CONTENT -->
            <div class="page-content">

                <!-- START X-NAVIGATION VERTICAL -->
                <ul class="x-navigation x-navigation-horizontal x-navigation-panel">


                    <!-- END TASKS -->
                </ul>
                <!-- END X-NAVIGATION VERTICAL -->


                  <%= yield %>


            </div>
            <!-- END PAGE CONTENT -->
        </div>
        <!-- END PAGE CONTAINER -->

        <!-- MESSAGE BOX-->
        <div class="message-box animated fadeIn" data-sound="alert" id="mb-signout">
            <div class="mb-container">
                <div class="mb-middle">
                    <div class="mb-title"><span class="fa fa-sign-out"></span> Log <strong>Out</strong> ?</div>
                    <div class="mb-content">
                        <p>Are you sure you want to log out?</p>
                        <p>Press No if youwant to continue work. Press Yes to logout current user.</p>
                    </div>
                    <div class="mb-footer">
                        <div class="pull-right">
                            <a href="pages-login.html" class="btn btn-success btn-lg">Yes</a>
                            <button class="btn btn-default btn-lg mb-control-close">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END MESSAGE BOX-->

    <!-- START SCRIPTS -->
        <!-- START PLUGINS -->
        <%= javascript_include_tag 'back', media: 'all', 'data-turbolinks-track' => true %>
        <!-- END TEMPLATE -->
    <!-- END SCRIPTS -->
    </body>
</html>
