<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- PAGE TITLE -->
    <title><%= @page_title %></title>
    <!-- MAKE IT RESPONSIVE -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- SEO -->
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="keywords" content="">
    <!-- FAVICON -->
	<!--<link rel="shortcut icon" href="<%= asset_path 'front/favicon.png' %>" />-->
    <!-- STYLESHEETS -->
    <%= stylesheet_link_tag 'front', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag 'front/planner/planner', media: 'all', 'data-turbolinks-track' => true %>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <%= javascript_include_tag 'ie8', 'data-turbolinks-track' => true %>
    <![endif]-->

    <!-- Planner -->
    <%= stylesheet_link_tag 'front/planner/planner', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'front/planner/modernizr-2.6.2.min', media: 'all', 'data-turbolinks-track' => true %>
    <!-- Planner -->

    <%= csrf_meta_tags %>
  </head>
  <!-- START BODY -->
  <body>
  	<!-- LOADER DIV - ONLY HOME -->
  	<div id="loader">
  		<div id="loading-logo"></div>
  	</div>
  	<div id="page">
	  	<!-- START HEADER -->
	  	<header id="header" class="<%= (params[:controller] == 'home' && params[:action] == 'index') ? 'big' : 'small' %> with-separation-bottom">
	  		<!-- POINTER ANIMATED -->
	  		<canvas id="header-canvas"></canvas>

	  		<!-- TOP NAVIGATION -->
	  		<div id="top-navigation">
		  		<ul class="animate-me fadeInDown" data-wow-duration="1.2s">
			  		<li class="menu-item"><i class="fa fa-phone"></i> 001 865-246-8210</li>
			  		<!--<li class="menu-item"><a><i class="fa fa-question"></i> FAQ</a></li>-->
			  		<li class="menu-item"><span class="navigation-social">Réseau social</span><a href="#"><i class="fa fa-pinterest"></i></a> </li>

		  		</ul>
	  		</div>

	  		<!-- MOBILE NAVIGATION -->
	  		<nav id="navigation-mobile"></nav>

	  		<!-- MAIN MENU -->
	  		<nav id="navigation">
	  			<!-- DISPLAY MOBILE MENU -->
	  			<a href="#" id="show-mobile-menu"><i class="fa fa-bars"></i></a>
	  			<!-- CLOSE MOBILE MENU -->
		  		<a href="#" id="close-navigation-mobile"><i class="fa fa-long-arrow-left"></i></a>

		  		<ul id="left-navigation" class="animate-me fadeInLeftBig">
			  		<li class="menu-item <%= @menu_hash_class[:home] %>">
			  			<a href="<%= root_path %>" data-description="All Starts here">Accueil</a>
			  		</li>
			  		<li class="menu-item <%= @menu_hash_class[:projects] %>">
			  			<a href="<%= portfolio_path %>" data-description="What we do">Projets</a>
			  		</li>
			  		<li class="menu-item <%= @menu_hash_class[:skills] %>">
			  		  <a href="<%= skills_path %>" data-description="We are the best">Compétences</a>
			  		</li>
		  		</ul>
		  		<div  class="animate-me flipInX" data-wow-duration="3s">
		  			<a href="<%= root_path %>" id="logo-navigation">
		  				<span>Your Home from A to Z !</span>
		  			</a>
		  		</div>
		  		<ul id="right-navigation" class="animate-me fadeInRightBig">
			  		<li class="menu-item <%= @menu_hash_class[:about_us] %>">
			  		  <a href="<%= about_us_path %>" data-description="We are a team">A propos</a>
			  		</li>
			  		<li class="menu-item <%= @menu_hash_class[:consulting] %>">
			  		  <a data-description="Submit a project" class="planner-btn" style = "cursor: pointer;">Consulting</a>
			  		</li>
			  		<li class="menu-item <%= @menu_hash_class[:contact] %>">
			  		  <a href="<%= contact_path %>" data-description="Get in touch">Contacts</a>
			  		</li>
		  		</ul>
	  		</nav>

        <% if (params[:controller] == 'home' && params[:action] == 'index') %>
	        <!-- TEXT SLIDER -->
			    <div id="ticker" class="animate-me zoomIn">
				    <h4 class="with-breaker">Pourquoi nous choisir ?</h4>
				    <div id="ticker-text">
					    <ul>
						    <li>Nous sommes passionnés</li>
						    <li>Nous sommes à votre écoute</li>
						    <li>La qualité est notre leitmotiv</li>
						    <li>Votre bien être est notre priorité</li>
						    <li>Nous sommes dynamiques</li>
					    </ul>
				    </div>
			    </div>
			  <% end %>

	  		<!-- SCROLL BOTTOM -->
	  		<div id="scroll-bottom" class="animate-me fadeInUpBig">
		  		<a href="#"><i class="fa fa-angle-double-down"></i></a>
	  		</div>

	  		<!-- SHADOW -->
	  		<div id="shade"></div>

	  		<!-- SLIDER NAVIGATION (DELETE IF YOU DON'T USE THE SLIDER) -->
            <div class="navigation-slider-container">
            	<a href="#" id="sliderPrev"><i class="fa fa-arrow-left"></i></a>
            	<a href="#" id="sliderNext"><i class="fa fa-arrow-right"></i></a>
            </div>

	  		<!-- HEADER SLIDER -->
		  	<div class="flexslider" id="header-slider">
		  		<ul class="slides">
		  			<li><img src="<%= asset_path 'front/backgrounds/bg1.jpg' %>" alt="SLider Image"></li>
		  			<li><img src="<%= asset_path 'front/backgrounds/bg2.jpg' %>" alt="SLider Image"></li>
		  			<li><img src="<%= asset_path 'front/backgrounds/bg3.jpg' %>" alt="SLider Image"></li>
		  		</ul>
		  	</div>
		  	<!-- OR VIDEO -> https://github.com/VodkaBears/Vide -->
		  	<!--<div id="header-video"
			    data-vide-bg="ogv: images/video/video, webm: images/video/video, poster: images/video/poster" data-vide-options="posterType: jpg, loop: true, muted: true, position: 50% 50%">
			</div>-->

	  	</header>
	  	<!-- END HEADER -->

	  	<!-- START MAIN CONTAINER -->
	  	<div class="main-container">
	  		<%= yield %>

        <div class="container">
	  			<!-- GET IN TOUCH  -->
	        <h2 class="with-breaker animate-me fadeInUp">
		        Actualités<span>Partager et s'informer.</span>
	        </h2>
	  		</div>
	  		<!-- CUSTOM CONTAINER -->
        <section class="contact-container with-separation-bottom with-separation-top">
	        <div class="contact-boxes">
		        <div class="contact-box contact-box-email animate-me zoomIn">
			        <h2>Email</h2>
			        <p>Ecrivez quelques lignes concernant vos idées, vos projets et avançons ensemble.</p>
			        <a href="<%= contact_path %>" class="btn btn-default"><i class="fa fa-envelope"></i> Ecrivez nous</a>
		        </div>
		        <div class="contact-box contact-box-pinterest animate-me zoomIn">
			        <h2>Pinterest</h2>
			        <p>Suivez nous, commentez et partageons nos idées sur Pinterest.</p>
			        <a href="#" class="btn btn-default"><i class="fa fa-pinterest"></i> Suivez nous</a>
		        </div>
	        </div>
        </section>
	  	</div>
	  	<!-- END MAIN CONTAINER -->

	  	<!-- START FOOTER -->
	  	<footer id="footer" class="with-separation-top">
		  	<aside id="widgets" class="container">
		  		<div class="row">
		  			<!-- WIDGET -->
			  		<div class="col-md-4 widget animate-me fadeInLeft">
			  			<img src="<%= asset_path 'front/logo-footer.png' %>" id="footer-logo" alt="Logo footer">
			  			<p>Fondé à Knoxville, TN., START est un concept immobilier qui, en partenariat avec plusieurs spécialistes s'impose comme référence dans le design et l'aménagement résidentiel et commercial de luxe en Côte d'Ivoire et dans la sous-région.</p>
			  			<a href="<%= about_us_path %>" class="btn btn-default"><i class="fa fa-plus-square"></i> Lire plus</a>
			  		</div>
		  			<!-- WIDGET -->
			  		<div class="col-md-4 widget animate-me fadeInUp">
				  		<h4>Navigation</h4>
				  		<ul>
					  		<li><a href="<%= root_path %>">Accueil</a></li>
					  		<li><a href="portfolio.html">Projets</a></li>
					  		<li><a href="<%= skills_path %>">Compétences</a></li>
					  		<li><a href="<%= about_us_path %>">A propos</a></li>
					  		<li><a data-description="Submit a project" class="planner-btn" style = "cursor: pointer;">Consulting</a></li>
					  		<li><a href="<%= contact_path %>">Contacts</a></li>
				  		</ul>
			  		</div>
		  			<!-- WIDGET -->
			  		<div class="col-md-4 widget animate-me fadeInRight">
			  			<h4>Contacts</h4>
			  			<ul class="contact-informations">
				  			<li class="contact-address">125 Beach St, Sharon, MA 02067</li>
				  			<li class="contact-phone">001 865-246-8210</li>
			  			</ul>
			  			<ul class="widget-social">
			  				<!-- ALL ICONS AVAILABLE ->http://fortawesome.github.io/Font-Awesome/icons/#brand-->
				  			<li><a href="#"><i class="fa fa-pinterest"></i></a></li>
			  			</ul>
			  			<a href="<%= contact_path %>" class="btn btn-default"><i class="fa fa-envelope-o"></i> Envoyer un email</a>
			  		</div>
		  		</div>
		  	</aside>
		  	<div id="copyright" class="animate-me fadeInUp">
		  		<div class="container">
			  		<p>&#169; 2014 Tous droits réservés.</p>
			  		<ul id="footer-navigation">
				  		<li><a>Termes et conditions</a></li>
				  		<li><a>Politique de vie privée</a></li>
				  		<li><a href="<%= contact_path %>">Contactez nous</a></li>
			  		</ul>
		  		</div>
		  	</div>
	  	</footer>
	  	<!-- END FOOTER -->

	  	<!-- SCROLL TOP -->
	  	<a href="#" id="scroll-top" class="fadeInRight animate-me"><i class="fa fa-angle-double-up"></i></a>


  	<!-- planner window -->
	    <div class="planner-modal grey custom-scroll">
		    <!-- planner-scrollarea adds custom scrollbar for planner -->
		    <div id="planner-scrollarea">
			    <div class="content-block">
				    <div class="row">
				    <!-- planner heading -->
				    <div class="ten columns centered">
					    <h2 class="bold">Soumission de projet</h2>
					    <p class="intro s-bold">
						    Vous souhaitez nous sommettre un projet ou une étude? Veuillez remplir ce formulaire avec un maximum de précisions concernant vos besoins. Nous vous recontacterons sous peu.
					    </p>
					    <hr class="thin grey">
				    </div>
				    </div>
				    <div class="row">
				      <div class="ten columns centered smallpadding">
				        <%#= javascript_include_tag "project/create"   %>

				        <%= form_for @project, url: create_project_path, remote: true,  html: {class: "form-horizontal"} do |f| %>
						      <!-- first part -->
						      <h5 class="bold purple-text">
						        <%= project_messages! %>
						        <b>
						          <div id = "project_errors">

						          </div>
						        </b>
						      </h5>
						      <div class="clear-20">
						      </div>
						      <div class="row">
							      <div class="field six columns">
							        <%= f.label :name %>
								      <%= f.text_field :name, placeholder: 'Veuillez entrer votre nom', class: 'input' %>
							      </div>
							      <div class="field six columns">
								      <%= f.label :email %>
								      <%= f.text_field :email, placeholder: 'Veuillez entrer votre email', class: 'input' %>
							      </div>
						      </div>
						      <div class="row">
							      <div class="field six columns">
								      <%= f.label :phone_number %>
								      <%= f.text_field :phone_number, placeholder: 'Veuillez entrer votre numéro de téléphone', class: 'input' %>
							      </div>
							      <div class="field six columns">
								      <%= f.label :company_name %>
								      <%= f.text_field :company_name, placeholder: 'Veuillez entrer le nom de votre entreprise', class: 'input' %>
							      </div>
						      </div>
						      <div class="row">
							      <div class="field six columns">
								      <%= f.label :website %>
								      <%= f.text_field :website, placeholder: 'Veuillez entrer le lien de votre site web', class: 'input' %>
							      </div>
							      <div class="field six columns">
								      <%= f.label :location %>
								      <%= f.text_field :location, placeholder: 'Veuillez entrer votre localisation', class: 'input' %>
							      </div>
						      </div>
						      <div class="clear-50">
						      </div>
						      <!-- second part -->
						      <h2 class="bold purple-text">Détails concernant le projet</h2>
						      <div class="clear-20">
						      </div>
						      <div class="field row">
							      <%= f.label :details %>
							      <div class="textarea">
								      <%= f.text_area :details, placeholder: 'Veuillez entrer votre descriptif', class: 'input textarea' %>
							      </div>
						      </div>
						      <div class="row">
							      <div class="field six columns">
								      <%= f.label :begin_date %>
								      <%= f.text_field :begin_date, placeholder: 'Quand souhaitez vous débuter?', class: 'input' %>
							      </div>
							      <div class="field six columns">
								      <%= f.label :budget_id %>
								      <%= f.collection_select(:budget_id, @budgets, :id, :label, options ={prompt: "Veuillez choisir votre budget"}, html_options = {class: "input"}) %>

							      </div>
						      </div>
						      <div class="clear-50">
						      </div>
						      <!-- third part -->
						      <h2 class="bold">Liste des tâches</h2>
						      <div class="clear-20">
						      </div>
						      <div class="field row">
							      <%= f.label :desired_task %>
							      <div class="textarea">
								      <%= f.text_area :desired_task, placeholder: 'Veuillez entrer votre descriptif', class: 'input textarea' %>
							      </div>
						      </div>
						      <div class="field row">
							      <%= f.label :anything_else %>
							      <div class="textarea">
								      <%= f.text_area :anything_else, placeholder: 'Veuillez entrer votre descriptif', class: 'input textarea' %>
							      </div>
						      </div>
						      <!-- submit button -->
						      <input type="submit" name="Submit" value="Soumettre" class="purple submit">
					      <% end %>
					      <hr class="thin grey">
					      <div class="twelve columns alpha">
						      <p>
							      <span class="purple-text bold">Politique de vie privée:</span>&nbsp; Vos informations ne seront jamais divulguées. Nous vous recontacterons sou peu après avoir étudié votre demande.
						      </p>
					      </div>
				      </div>
				    </div>
			    </div>
			    <!-- close planner button -->
			    <a class="remove-planner"><i class="fa fa-times"></i></a>
		    </div><!--planner scrollarea -->
	    </div><!-- planner -->


  	</div>


    <!-- SCRIPTS -->
    <%= javascript_include_tag 'front', 'data-turbolinks-track' => true %>

    <%= javascript_include_tag 'front/planner/planner', 'data-turbolinks-track' => true %>

    <script type="text/javascript">
		/*TEXT TICKER (ONLY FOR HOME PAGE)*/
		$('#ticker-text').vTicker('init', {
			speed: 300,
		    pause: 4000
	    });
	</script>

  <script>
  $(function() {
    $('#project_begin_date').datepicker({
      format: 'dd/mm/yyyy',
      startDate: '+8d',
      language: 'fr',
      autoclose: true
    });
  });
  </script>
  </body>
  <!-- END BODY -->
</html>
